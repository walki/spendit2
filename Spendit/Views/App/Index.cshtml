@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-9">
        <div class="expense-info">
            <img src="~/img/ReceiptSwiss.jpg" />
            <h3>Expense</h3>
            <ul class="expense-props">
                <li>Id: 32</li>
                <li>From: Target</li>
                <li>What: Household</li>
                <li>Amount: $45.87</li>
                <li>Date: 7/30/2018</li>
                <li>Comment: School Supplies</li>
            </ul>
            <button id="editButton" class="btn btn-success">Edit</button>
        </div>


        <div id="expenseForm">
            <form>
                <label>From:</label>
                <br />
                <input />
                <br />
                <label>What:</label>
                <br />
                <input />
                <br />
                <label>Amount:</label>
                <br />
                <input type="number" />
                <br />
                <label>Date:</label>
                <br />
                <input type="date" />
                <br />
                <label>Comment:</label>
                <br />
                <textarea rows="4"></textarea>
                <br />
                <input type="submit" value="Enter Expense" />

            </form>
        </div>

        <div>
            <div id="loginToggle">Login</div>
            <form class="popup-form">
                <div>
                    <label>Username</label>
                    <input />
                </div>
                <div>
                    <label>Password</label>
                    <input type="password" />
                </div>
                <div>
                    <input type="checkbox" />
                    <label>Remember Me</label>
                </div>
                <div>
                    <input type="submit" value="Login" />
                </div>

            </form>
        </div>
    </div>
    <div class="col-md-3">Hello, lots of space over here!</div>
</div>


